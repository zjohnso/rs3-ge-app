<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroundDark">

    <ImageView
        android:id="@+id/mdListThumbnail"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@color/background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/mdlvBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="2dp"
        android:background="@color/background"
        app:layout_constraintTop_toTopOf="@id/mdListThumbnail"
        app:layout_constraintStart_toEndOf="@+id/mdListThumbnail"
        app:layout_constraintBottom_toBottomOf="@id/mdListThumbnail"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/mdListName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/text"
        android:textSize="18sp"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/mdlvBackground"
        app:layout_constraintTop_toTopOf="@id/mdlvBackground"
        app:layout_constraintBottom_toBottomOf="@id/mdlvBackground"/>


</androidx.constraintlayout.widget.ConstraintLayout>